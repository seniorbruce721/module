[Rule]
# > 策略优选
AND,((DOMAIN,iosapps.itunes.apple.com), (SCRIPT,策略优选)),Apple
# > 威锋 去广告
URL-REGEX,^https:\/\/api\.wfdata\.club\/v2\/yesfeng\/(infoCenterAd|yesList),REJECT

[Panel]
# > 服务状态
服务状态 = title="服务状态",content="请刷新",style=info,update-interval=360,script-name=服务状态
#开心一点
reload = title=不开心就刷新一下我的我！,content=宝～ 今天也要开开心心的喔！,style=info,script-name=reload,update-interval=-1
策略面板 = script-name=缓存开关,update-interval=60
节假日提醒 = script-name=节假日提醒,update-interval=3600
flushDNS = script-name=flushDNS,title=Flush DNS,content=请刷新,update-interval=600
# > 网络状态
网络状态 = title="网络状态",content="请刷新",style=info,update-interval=360,script-name=网络状态

# 分割线——————————————————————————

[Script]
# > 苹果策略优选
策略优选 = type=rule,timeout=60,script-path=https://raw.githubusercontent.com/githubdulong/Script/master/speedLimit.js,argument="Return=10min,Group=Apple&policy=DIRECT,Proxy,Support&time=15&minSpeed=20"
# 京东比价 Lite(通知版)
http-response ^https?://api\.m\.jd\.com/(client\.action|api)\?functionId=(wareBusiness|serverConfig|basicConfig|lite_wareBusiness|pingou_item) requires-body=true, script-path=https://raw.githubusercontent.com/Tartarus2014/Script/master/jd_price_lite.js, tag=京东比价 Lite(通知版)
# > 百度跳转
百度跳转 = type=http-response,pattern=^https:\/\/boxer\.baidu\.com\/scheme\?scheme,script-path=https://raw.githubusercontent.com/app2smile/rules/master/js/baidu-no-redirect.js
# > 百度云盘 解锁
百度云盘 = type=http-response,pattern=https:\/\/pan\.baidu\.com\/rest\/2\.0\/membership\/user,requires-body=1,max-size=0,script-path=https://github.com/ddgksf2013/Scripts/raw/m
#开心一点
reload=script-path=https://raw.githubusercontent.com/Onlookers-Group/Texonin-LAB-Public/main/Surge/js/js_baby/zReload.js,type=generic
# > 策略面板
缓存开关 = type=generic,timeout=15,script-path=https://raw.githubusercontent.com/githubdulong/Script/master/surgepro_flushdns.js,argument=icon=power.circle&color=#FF2121&title=𝗦𝗨𝗥𝗚𝗘 ®｜2022-12-22
节假日提醒 = type=generic,timeout=10,script-path=https://raw.githubusercontent.com/iEwha/Profiles/master/Surge/Scripts/timecard.js
flushDNS = type=generic,timeout=5,script-path=https://raw.githubusercontent.com/zZPiglet/Task/master/asset/flushDNS.js,argument=title=DNS FLush&icon=arrow.clockwise&color=#3d3d5b
# > 网络信息
网络状态 = type=generic, script-path=https://hub.nange.cn/Script/Tools/NetInfo.js
# > 服务状态
服务状态 = type=generic, script-path=https://hub.nange.cn/Script/Tools/APIStatus.js

